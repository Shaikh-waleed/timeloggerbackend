@using TimeLogger.Client.Mvc.Models
@using TimeLogger.Client.Mvc.Views.Account
@model TimeLogger.Client.Mvc.Models.IdentityUserResponseModel
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
    var message = ViewBag.StatusMessage;
}

<h4>@ViewBag.Title</h4>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-6">
        <div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>

            <hr />
            @Html.Partial("_ChangeEmail", new ChangeEmailViewModel { Email = Model.Email })

            @Html.Partial("_AddPhoneNumber", new AddPhoneNumberViewModel { PhoneNumber = Model.PhoneNumber })
        </div>
    </div>
</div>










